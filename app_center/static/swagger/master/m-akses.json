{
  "get": {
    "summary": "Get a list of Master Akses",
    "description": "Returns a list of akses, filtered by id and akses",
    "tags": ["m-akses"],
    "parameters": [
      {
        "in": "query",  
        "name": "id",
        "description": "id akses",
        "type": "integer",
        "required": false
      },
      {
        "in": "query",  
        "name": "id_role",
        "description": "id role",
        "type": "integer",
        "required": false
      },
      {
        "in": "query",  
        "name": "id_page",
        "description": "id page",
        "type": "integer",
        "required": false
      },
      {
        "in": "query",  
        "name": "akses",
        "description": "nama akses",
        "type": "string",
        "required": false
      }
    ],
    "responses": {
      "200": {
        "description": "A successful response",
        "schema": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "id_role": {
                "type": "integer"
              },
              "id_page": {
                "type": "integer"
              },
              "akses": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  },    
