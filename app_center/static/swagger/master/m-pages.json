{
  "get": {
    "summary": "Get a list of Master Pages",
    "description": "Returns a list of pages, filtered by id and page",
    "tags": ["m-pages"],
    "parameters": [
      {
        "in": "query",  
        "name": "id",
        "description": "id Pagenyach",
        "type": "integer",
        "required": false
      },
      {
        "in": "query",  
        "name": "page",
        "description": "nama Pagenyach",
        "type": "string",
        "required": false
      }
    ],
    "responses": {
      "200": {
        "description": "A successful response",
        "schema": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "page": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  },    
